{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch React App (node.js)",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/src",
      "sourceMaps": true,
      "preLaunchTask": "npm: dev",
      "userDataDir": "${workspaceFolder}/.vscode/chrome"
    },
    {
      "name": "Launch React App (local mode)",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}",
      "sourceMaps": true,
      "preLaunchTask": "npm: dev:local"
    }
  ],
  "tasks": {
    "version": "2.0.0",
    "tasks": [
      {
        "label": "npm: dev",
        "type": "npm",
        "script": "dev",
        "isBackground": true,
        "env": {
          "NODE_ENV": "development"
        },
        "presentation": {
          "reveal": "silent"
        },
        "problemMatcher": {
          "owner": "typescript",
          "source": "ts",
          "fileLocation": ["relative", "${workspaceFolder}"],
          "pattern": {
            "regexp": "^\\s+(\\S.+)$",
            "message": 1
          },
          "background": {
            "activeOnStart": true,
            "beginsPattern": "^.*Compiled successfully.*$",
            "endsPattern": "^.*Failed to compile.*$"
          }
        }
      },
      {
        "label": "npm: dev:local",
        "type": "npm",
        "script": "dev:local",
        "isBackground": true
      }
    ]
  }
}
